@page "{id}"
@model DetailsModel
@{
    ViewData["Title"] = "Cosmetic Details";
}

<h2 class="mb-4">Cosmetic Details</h2>

<div class="card shadow-sm border-0 w-50 mx-auto bg-light p-4">
    <dl class="row">
        <dt class="col-sm-4">Name:</dt>
        <dd class="col-sm-8">@Model.Cosmetic.CosmeticName</dd>

        <dt class="col-sm-4">Skin Type:</dt>
        <dd class="col-sm-8">@Model.Cosmetic.SkinType</dd>

        <dt class="col-sm-4">Expiration:</dt>
        <dd class="col-sm-8">@Model.Cosmetic.ExpirationDate</dd>

        <dt class="col-sm-4">Size:</dt>
        <dd class="col-sm-8">@Model.Cosmetic.CosmeticSize</dd>

        <dt class="col-sm-4">Price:</dt>
        <dd class="col-sm-8">$@Model.Cosmetic.DollarPrice</dd>

        <dt class="col-sm-4">Category:</dt>
        <dd class="col-sm-8">@Model.Cosmetic.Category?.CategoryName</dd>
    </dl>

    <div class="mt-3">
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
