@page "{id}"
@model EditModel

<h2 class="mb-4">Edit Cosmetic</h2>

<form method="post" class="border p-4 rounded shadow-sm bg-light">
    <input type="hidden" asp-for="Cosmetic.CosmeticId" />
    <div class="form-group mb-3">
        <label asp-for="Cosmetic.CosmeticName" class="form-label">Name</label>
        <input asp-for="Cosmetic.CosmeticName" class="form-control" />
        <span asp-validation-for="Cosmetic.CosmeticName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Cosmetic.SkinType" class="form-label">Skin Type</label>
        <input asp-for="Cosmetic.SkinType" class="form-control" />
        <span asp-validation-for="Cosmetic.SkinType" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Cosmetic.ExpirationDate" class="form-label">Expiration Date</label>
        <input asp-for="Cosmetic.ExpirationDate" type="date" class="form-control" />
        <span asp-validation-for="Cosmetic.ExpirationDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Cosmetic.CosmeticSize" class="form-label">Size</label>
        <input asp-for="Cosmetic.CosmeticSize" class="form-control" />
        <span asp-validation-for="Cosmetic.CosmeticSize" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Cosmetic.DollarPrice" class="form-label">Price</label>
        <input asp-for="Cosmetic.DollarPrice" class="form-control" />
        <span asp-validation-for="Cosmetic.DollarPrice" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Cosmetic.CategoryId" class="form-label">Category Name</label>
        <select asp-for="Cosmetic.CategoryId" class="form-select" asp-items="@(ViewData["Category"] as SelectList)">
        </select>
        <span asp-validation-for="Cosmetic.CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}