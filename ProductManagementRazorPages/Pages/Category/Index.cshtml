@page
@model ProductManagementRazorPages.Pages.Category.IndexModel
@{
    ViewData["Title"] = "Category List";
}

<div class="container py-4">
    <h2 class="text-center mb-4 text-primary">Cosmetic Category List</h2>

    @if (Model.Categories?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered shadow-sm">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th>Usage Purpose</th>
                        <th>Formulation Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td>@category.CategoryName</td>
                            <td>@category.UsagePurpose</td>
                            <td>@category.FormulationType</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">No categories found.</div>
    }
    <div class="mt-3">
        <a asp-page="/Cosmetic/Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
